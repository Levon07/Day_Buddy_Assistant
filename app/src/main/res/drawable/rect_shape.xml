<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/NN_BlackB" />
            <gradient android:angle="90"
                android:startColor="@color/translucent"
                android:centerColor="@color/light_blue"
                android:endColor="@color/translucent"/>
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item
        android:bottom="0dp" android:right="5dp"  android:left="5dp"  >
        <shape android:shape="rectangle">
            <solid android:color="@color/NN_Blue" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
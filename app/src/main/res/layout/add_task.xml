<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:textAlignment="center"
                android:textColor="@color/NN_White"
                android:id="@+id/Start_time_view"
                android:text="Start Time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rect_shape"
                android:layout_margin="2dp"
                android:onClick="pickStarttime"/>
            <TextView
                android:textAlignment="center"
                android:textColor="@color/NN_White"
                android:id="@+id/End_Time_view"
                android:text="End Time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rect_shape"
                android:layout_margin="2dp"
                android:onClick="pickEndtime"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:textAlignment="center"
                android:textColor="@color/NN_White"
                android:id="@+id/Task_text_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/rect_shape"
                android:onClick="edittext"
                android:text="Task Text" />

            <TextView
                android:textAlignment="center"
                android:textColor="@color/NN_White"
                android:id="@+id/location"
                android:text="Location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rect_shape"
                android:layout_margin="2dp"
                android:onClick="pickaPlace"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>